<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?attr/bg_1"
    android:overScrollMode="never">

    <androidx.constraintlayout.widget.ConstraintLayout xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/tv_qr_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="26dp"
            android:layout_marginTop="14dp"
            android:fontFamily="@font/jost_regular"
            android:text="@string/event1"
            android:textColor="#828282"
            android:textSize="@dimen/ts_14sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <EditText
            android:id="@+id/edt_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="14dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/bg_radius_16dp"
            android:fontFamily="@font/jost_regular"
            android:gravity="center|start"
            android:hint="@string/title1"
            android:imeOptions="actionDone"
            android:inputType="text"
            android:maxLines="1"
            android:overScrollMode="always"
            android:paddingHorizontal="18dp"
            android:paddingVertical="16dp"
            android:scrollbarStyle="insideInset"
            android:scrollbars="horizontal"
            android:textColor="?attr/text_color"
            android:textCursorDrawable="@drawable/edit_text_cursor"
            android:textSize="@dimen/ts_18sp"
            app:layout_constraintTop_toBottomOf="@id/tv_qr_type" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:src="@drawable/require_filed_icon"
            app:layout_constraintEnd_toEndOf="@id/edt_title"
            app:layout_constraintTop_toTopOf="@id/edt_title" />

        <EditText
            android:id="@+id/edt_start_time"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="14dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/bg_radius_16dp"
            android:focusable="false"
            android:fontFamily="@font/jost_regular"
            android:gravity="center|start"
            android:hint="@string/start_time"
            android:paddingHorizontal="18dp"
            android:paddingVertical="18dp"
            android:textColor="?attr/text_color"
            android:textCursorDrawable="@android:color/transparent"
            android:textSize="@dimen/ts_18sp"
            app:layout_constraintTop_toBottomOf="@id/edt_description" />

        <EditText
            android:id="@+id/edt_end_time"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="14dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/bg_radius_16dp"
            android:focusable="false"
            android:fontFamily="@font/jost_regular"
            android:gravity="center|start"
            android:hint="@string/end_time"
            android:paddingHorizontal="18dp"
            android:paddingVertical="18dp"
            android:textColor="?attr/text_color"
            android:textCursorDrawable="@android:color/transparent"
            android:textSize="@dimen/ts_18sp"
            app:layout_constraintTop_toBottomOf="@id/edt_start_time" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:src="@drawable/require_filed_icon"
            app:layout_constraintEnd_toEndOf="@id/edt_end_time"
            app:layout_constraintTop_toTopOf="@id/edt_end_time" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:src="@drawable/require_filed_icon"
            app:layout_constraintEnd_toEndOf="@id/edt_start_time"
            app:layout_constraintTop_toTopOf="@id/edt_start_time" />

        <EditText
            android:id="@+id/edt_location"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="14dp"
            android:layout_marginTop="14dp"
            android:background="@drawable/bg_radius_16dp"
            android:fontFamily="@font/jost_regular"
            android:gravity="center|start"
            android:hint="@string/location1"
            android:maxLines="2"
            android:overScrollMode="always"
            android:paddingHorizontal="18dp"
            android:paddingVertical="18dp"
            android:scrollbarStyle="insideInset"
            android:scrollbars="vertical"
            android:textColor="?attr/text_color"
            android:textCursorDrawable="@drawable/edit_text_cursor"
            android:textSize="@dimen/ts_18sp"
            app:layout_constraintTop_toBottomOf="@id/edt_title" />

        <EditText
            android:id="@+id/edt_description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="14dp"
            android:layout_marginTop="14dp"
            android:background="@drawable/bg_radius_16dp"
            android:fontFamily="@font/jost_regular"
            android:gravity="center|start"
            android:hint="@string/description1"
            android:maxLines="3"
            android:overScrollMode="always"
            android:paddingHorizontal="18dp"
            android:paddingVertical="18dp"
            android:scrollbarStyle="insideInset"
            android:scrollbars="vertical"
            android:textColor="?attr/text_color"
            android:textCursorDrawable="@drawable/edit_text_cursor"
            android:textSize="@dimen/ts_18sp"
            app:layout_constraintTop_toBottomOf="@id/edt_location" />
    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.core.widget.NestedScrollView>

