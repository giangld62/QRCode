<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/ctl_root"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="?attr/bg_1">

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="match_parent"
            android:layout_height="58dp"
            android:fontFamily="@font/jost_medium"
            android:gravity="center"
            android:text="@string/setting"
            android:textColor="?attr/text_color"
            android:textSize="@dimen/ts_22sp"
            app:layout_constraintTop_toTopOf="parent" />

        <View
            android:elevation="-1dp"
            android:id="@+id/view_content"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginHorizontal="14dp"
            android:background="@drawable/bg_radius_16dp"
            app:layout_constraintTop_toBottomOf="@id/tv_title"
            app:layout_constraintBottom_toBottomOf="@id/tv_version"/>

        <TextView
            android:id="@+id/tv_sound"
            android:layout_width="0dp"
            android:layout_height="68dp"
            android:drawablePadding="14dp"
            android:fontFamily="@font/jost_regular"
            android:gravity="start|center"
            android:paddingHorizontal="14dp"
            android:text="@string/sound"
            android:textColor="?attr/text_color_2"
            android:textSize="@dimen/ts_18sp"
            app:drawableLeftCompat="@drawable/sound_icon"
            app:layout_constraintEnd_toStartOf="@id/switch_sound"
            app:layout_constraintStart_toStartOf="@id/view_content"
            app:layout_constraintTop_toTopOf="@id/view_content" />

        <View
            android:elevation="1dp"
            android:id="@+id/view_divider1"
            android:layout_width="0dp"
            android:layout_height="0.5dp"
            android:layout_marginStart="64dp"
            android:background="?attr/line_color"
            app:layout_constraintEnd_toEndOf="@id/view_content"
            app:layout_constraintStart_toStartOf="@id/view_content"
            app:layout_constraintTop_toBottomOf="@id/tv_sound" />

        <TextView
            android:background="@drawable/bg_tv_rectangle_ripple"
            android:id="@+id/tv_feed_back"
            android:layout_width="0dp"
            android:layout_height="68dp"
            android:drawablePadding="14dp"
            android:fontFamily="@font/jost_regular"
            android:gravity="start|center"
            android:paddingHorizontal="14dp"
            android:text="@string/feed_back"
            android:textColor="?attr/text_color_2"
            android:textSize="@dimen/ts_18sp"
            app:drawableLeftCompat="@drawable/feedback_icon"
            app:layout_constraintEnd_toEndOf="@id/view_content"
            app:layout_constraintStart_toStartOf="@id/view_content"
            app:layout_constraintTop_toBottomOf="@id/tv_sound"
            app:drawableRightCompat="@drawable/arrow_icon" />

        <View
            android:elevation="1dp"
            android:id="@+id/view_divider2"
            android:layout_width="0dp"
            android:layout_height="0.5dp"
            android:layout_marginStart="64dp"
            android:background="?attr/line_color"
            app:layout_constraintEnd_toEndOf="@id/view_content"
            app:layout_constraintStart_toStartOf="@id/view_content"
            app:layout_constraintTop_toBottomOf="@id/tv_feed_back" />

        <TextView
            android:background="@drawable/bg_tv_rectangle_ripple"
            app:drawableRightCompat="@drawable/arrow_icon"
            android:id="@+id/tv_rate_app"
            android:layout_width="0dp"
            android:layout_height="68dp"
            android:drawablePadding="14dp"
            android:fontFamily="@font/jost_regular"
            android:gravity="start|center"
            android:paddingHorizontal="14dp"
            android:text="@string/rate_app"
            android:textColor="?attr/text_color_2"
            android:textSize="@dimen/ts_18sp"
            app:drawableLeftCompat="@drawable/rate_app_icon"
            app:layout_constraintEnd_toEndOf="@id/view_content"
            app:layout_constraintStart_toStartOf="@id/view_content"
            app:layout_constraintTop_toBottomOf="@id/tv_feed_back" />

        <View
            android:elevation="1dp"
            android:id="@+id/view_divider3"
            android:layout_width="0dp"
            android:layout_height="0.5dp"
            android:layout_marginStart="64dp"
            android:background="?attr/line_color"
            app:layout_constraintEnd_toEndOf="@id/view_content"
            app:layout_constraintStart_toStartOf="@id/view_content"
            app:layout_constraintTop_toBottomOf="@id/tv_rate_app" />

        <TextView
            android:background="@drawable/bg_tv_rectangle_ripple"
            android:id="@+id/tv_share_app"
            android:layout_width="0dp"
            android:layout_height="68dp"
            android:drawablePadding="14dp"
            android:fontFamily="@font/jost_regular"
            android:gravity="start|center"
            android:paddingHorizontal="14dp"
            android:text="@string/share_app"
            android:textColor="?attr/text_color_2"
            android:textSize="@dimen/ts_18sp"
            app:drawableLeftCompat="@drawable/share_app_icon"
            app:drawableRightCompat="@drawable/arrow_icon"
            app:layout_constraintEnd_toEndOf="@id/view_content"
            app:layout_constraintStart_toStartOf="@id/view_content"
            app:layout_constraintTop_toBottomOf="@id/tv_rate_app" />

        <View
            android:elevation="1dp"
            android:id="@+id/view_divider4"
            android:layout_width="0dp"
            android:layout_height="0.5dp"
            android:layout_marginStart="64dp"
            android:background="?attr/line_color"
            app:layout_constraintEnd_toEndOf="@id/view_content"
            app:layout_constraintStart_toStartOf="@id/view_content"
            app:layout_constraintTop_toBottomOf="@id/tv_share_app" />

        <TextView
            android:background="@drawable/bg_tv_rectangle_ripple"
            android:id="@+id/tv_privacy_policy"
            android:layout_width="0dp"
            android:layout_height="68dp"
            android:drawablePadding="14dp"
            android:fontFamily="@font/jost_regular"
            android:gravity="start|center"
            android:paddingHorizontal="14dp"
            android:text="@string/privacy_policy"
            android:textColor="?attr/text_color_2"
            android:textSize="@dimen/ts_18sp"
            app:drawableLeftCompat="@drawable/privacy_policy_icon"
            app:drawableRightCompat="@drawable/arrow_icon"
            app:layout_constraintEnd_toEndOf="@id/view_content"
            app:layout_constraintStart_toStartOf="@id/view_content"
            app:layout_constraintTop_toBottomOf="@id/tv_share_app" />

        <View
            android:elevation="1dp"
            android:id="@+id/view_divider5"
            android:layout_width="0dp"
            android:layout_height="0.5dp"
            android:layout_marginStart="64dp"
            android:background="?attr/line_color"
            app:layout_constraintEnd_toEndOf="@id/view_content"
            app:layout_constraintStart_toStartOf="@id/view_content"
            app:layout_constraintTop_toBottomOf="@id/tv_privacy_policy" />

        <androidx.appcompat.widget.SwitchCompat
            android:layout_marginEnd="14dp"
            android:id="@+id/switch_sound"
            android:layout_width="44dp"
            android:layout_height="26dp"
            android:background="@drawable/switch_on_off_color_state"
            android:thumb="@null"
            app:layout_constraintBottom_toBottomOf="@id/tv_sound"
            app:layout_constraintEnd_toEndOf="@id/view_content"
            app:layout_constraintTop_toTopOf="@id/tv_sound" />

        <TextView
            android:id="@+id/tv_version"
            android:layout_width="wrap_content"
            android:layout_height="64dp"
            app:layout_constraintTop_toBottomOf="@id/view_divider5"
            android:gravity="center|start"
            app:layout_constraintStart_toStartOf="@id/view_content"
            android:layout_marginStart="22dp"
            android:fontFamily="@font/jost_regular"
            android:textSize="@dimen/ts_18sp"
            android:textColor="?attr/text_color_2"/>


    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>